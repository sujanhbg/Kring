<div class="w3-row">
    <div class="w3-col s12">
        &nbsp;
    </div>
    <div class="w3-col s12">


        <div class="w3-container w3-border-bottom w3-border-green">
            <b class="w3-large">Add New Blog Category</b>
        </div>

        <div class="w3-padding">
            <form  method="POST" action="{{ baseurl }}/blog/newsave" 
                   onsubmit="return submitAutoForm(this, snackbar('Save Success'), location.replace('{{ baseurl }}/blog'));">




                {# ----------subfor------------------------------ #}

                <div class="w3-row">
                    <div class="w3-col s12 m2 l2">
                        <div class="input-field  label w3-right-align w3-padding-small">
                            <label>Subfor:</label>
                        </div>
                    </div>
                    <div class="w3-col s12 m10 l10">
                        <div class="input-field  w3-padding-small">
                            <select name="subfor" id="subfor" class="w3-input w3-border" onchange="loadurl('{{ get_url }}&opt=blog_category_CheckValid&fname=subfor&fval=' + this.value','subformsgg');">

                                {# Model
                                    function get_subforSelectData(){
                                        return $this->dbal()->query('SELECT `ID`,`category_name` FROM blog_category WHERE `deleted`=0');
                                            }
                                   Controller::
                                       $data['subforSelectData']=$this->model()->get_subforSelectData();
                                   #}
                                <option value="0" >Select Subfor</option>
                                {% for subforoption in  subforSelectData %}

                                    <option value="{{ subforoption.ID }}" >{{ subforoption.category_name }}</option>
                                {% endfor %}

                            </select><br>
                        </div>
                        <div class=""  id="subformsgg">
                            &nbsp;
                        </div>
                    </div>
                </div>



                {# ----------category_name------------------------------ #}

                <div class="w3-row">
                    <div class="w3-col s12 m2 l2">
                        <div class="input-field  label w3-right-align w3-padding-small">
                            <label>Category Name:</label>
                        </div>
                    </div>
                    <div class="w3-col s12 m10 l10">
                        <div class="input-field  w3-padding-small">
                            <textarea id="category_name_t" class="w3-input w3-border" name="category_name"></textarea>

                        </div>
                        <div class=""  id="category_namemsgg">
                            &nbsp;
                        </div>
                    </div>
                </div>




                <div id="msg3rr"> </div>
                <div class="input-field w3-text-blue w3-center">
                    <button class="btn waves-effect waves-light s-blue" id="savebtn">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i> Save
                    </button>
                </div>





            </form>
        </div>

    </div>
    <div class="w3-col s12">
        &nbsp;
    </div>
</div>


