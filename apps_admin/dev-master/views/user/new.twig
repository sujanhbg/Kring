        <div class="w3-container w3-border-bottom w3-border-green">
            <b class="w3-large">Add New User</b>
        </div>

        <div class="w3-padding">
            <form  method="POST" action="{{ baseurl }}/user/newsave" onsubmit="return submitthisform(this);">




                {# ----------firstname------------------------------ #}

